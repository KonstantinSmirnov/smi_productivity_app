<% if !@current_workspace %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h3 class="text-center round">Please select a workspace to continue</h3>
        </div>
        <div class="panel-body">
          <div class="col-xs-6 col-xs-offset-3">
            <br>
            <% current_user.workspaces.each do |w| %>
              <div class="form-group">
                <div class="col-xs-9">
                  <h5><%= link_to "#{w.title}", app_workspace_path(w) %></h5>
                  <hr>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <h3>This is a '<%= @current_workspace.title %>' dashboard</h3>
  # Should be added in a separate controller Workspace::Colleagues
  <br>
  <% @current_workspace.users.each do |u| %>
    <%= u.name %>
  <% end %>
<% end %>



