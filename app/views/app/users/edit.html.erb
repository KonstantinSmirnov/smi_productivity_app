<div class="row">
  <div class="col-sm-12">
    <h2>User profile</h2>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <!-- Header -->
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="pill" href="#user">User data</a></li>
          <li><a data-toggle="pill" href="#pass">Change password</a></li>
          <li><a data-toggle="pill" href="#remove">Delete account</a></li>
        </ul>
        <br>
        <div class="tab-content">
          <!-- Content 1 -->
          <div id="user" class="tab-pane in active">
            <div class="col-xs-6 col-xs-offset-3">
              <%= form_for [:app, @user], :url => { :action => "update_user" }, :html => {:class => "form-horizontal center"} do |f| %>
                <div class="form-group">
                  <div class="col-xs-3">
                    <%= f.label :name, class: 'control-label' %>
                  </div>
                  <div class="col-xs-9">
                    <%= f.text_field :name, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-3">
                    <%= f.label :email, class: 'control-label' %>
                  </div>
                  <div class="col-xs-9">
                    <%= f.email_field :email, class: 'form-control', disabled: true %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-offset-3 col-xs-9">
                    <%= f.submit 'Update', class: 'btn btn-primary' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- Content 2 -->
          <div id="pass" class="tab-pane fade">
          <p>If you wish to change your password, enter new password here twice.</p>
          <div class="col-xs-6 col-xs-offset-3">
            <%= form_for [:app, @user], :url => { :action => "update_password" }, :html => {:class => "form-horizontal center"} do |f| %>
              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.label :password, class: 'control-label' %>
                </div>
                <div class="col-xs-9">
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-xs-3">
                  <%= f.label :password_confirmation, "Repeat", class: 'control-label' %>
                </div>
                <div class="col-xs-9">
                  <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">
                  <%= f.submit 'Update password', class: 'btn btn-primary' %>
                </div>
              </div>
            <% end %>
          </div>
          </div>
          <!-- Content 3 -->
          <div id="remove" class="tab-pane fade">
            <p>Please take into account that after you will press the button 'Delete', your account will be deleted permanently!</p>
            <div class="col-xs-6 col-xs-offset-3">
              <form class="form-horizontal center">
                <div class="form-group">
                  <div class="col-xs-offset-3 col-xs-9">
                    <a class="btn btn-danger" data-toggle="modal" data-target="#delete_user_modal">Delete account</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="delete_user_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center">Do you want to delete your account?</h4>
      </div>
      <div class="modal-body">
        <div id="delete_message" class="text-center"></div>
        <div class="">
          <%= form_for [:app, @user], remote: true, :url => { :action => "destroy" }, :html => {:method => :delete, :class => "form-horizontal center"} do |f| %>
            <div class="form-group">
              <div class="col-xs-3">
                <%= f.label :password, class: 'control-label' %>
              </div>
              <div class="col-xs-9">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-xs-offset-3 col-xs-9">
                <%= f.submit 'I want to delete my account permanently!', class: 'btn btn-danger' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

