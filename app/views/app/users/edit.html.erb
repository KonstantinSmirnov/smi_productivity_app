<div class="row">
  <div class="col-sm-12">
    <h2>User profile</h2>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <!-- Header -->
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="pill" href="#home">User data</a></li>
          <li><a data-toggle="pill" href="#menu1">Change password</a></li>
          <li><a data-toggle="pill" href="#menu2">Remove account</a></li>
        </ul>
        <br>
        <div class="tab-content">
          <!-- Content 1 -->
          <div id="home" class="tab-pane in active">
            <div class="col-xs-6 col-xs-offset-3">
              <%= form_for [:app, @user], :html => {:class => "form-horizontal center"} do |f| %>
                <div class="form-group">
                  <div class="col-xs-3">
                    <%= f.label :name, class: 'control-label' %>
                  </div>
                  <div class="col-xs-9">
                    <%= f.text_field :name, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-3">
                    <%= f.label :email, class: 'control-label' %>
                  </div>
                  <div class="col-xs-9">
                    <%= f.email_field :email, class: 'form-control', disabled: true %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-3">
                    <%= f.label :password, class: 'control-label' %>
                  </div>
                  <div class="col-xs-9">
                    <%= f.password_field :password, class: 'form-control' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-offset-3 col-xs-9">
                    <%= f.submit 'Update', class: 'btn btn-primary' %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- Content 2 -->
          <div id="menu1" class="tab-pane fade">
            <h3>Menu 1</h3>
            <p>Some content in menu 1.</p>
          </div>
          <!-- Content 3 -->
          <div id="menu2" class="tab-pane fade">
            <h3>Menu 2</h3>
            <p>Some content in menu 2.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

