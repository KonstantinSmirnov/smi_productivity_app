<%= form_for object, :url => app_project_update_task_due_date_path(@current_project, object), remote: true do |f| %>
  <%= f.hidden_field :due_date, class: 'form-control', id: 'datetime' %>
  <div id="datetimepicker12"></div>
  <div class="text-center">
    <i class="btn btn-default" id="clearpicker">Clear</i>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>



<script type="text/javascript">
  $(function () {
    var dueDate="<%= object.due_date %>";
      $('#datetimepicker12').datepicker({
        date: dueDate,
        inline: true,
        sideBySide: true,
        todayHighlight: true,
        format: 'yyyy-mm-dd'
      }).on('changeDate', function(e){
        $('#datetime').val(e.format('yyyy-mm-dd'))
      });
    $("#datetimepicker12").datepicker("setDate", dueDate);
  });

  $(document).on('click', '#clearpicker', function() {
    $("#datetime").val('');
    $("#datetimepicker12").datepicker("clearDates");
  });
</script>
