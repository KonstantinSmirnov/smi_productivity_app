<% if !object.description or object.description.empty? %>
  <p>
    <a href="#" data-toggle="modal" data-target="#task_description_modal"><i>Add description</i></a>
  </p>
<% else %>
  <p>
    <a href="#" data-toggle="modal" data-target="#show_task_description_modal">
      <%= object.description.truncate(250) %> <i>(click to open)</i>
    </a>
    <a href="#" class="btn btn-default btn-xs" data-toggle="modal" data-target="#task_description_modal">
      <i>Edit</i>
    </a>
  </p>
<% end %>

<div class="modal fade" id="show_task_description_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center">Task description</h4>
      </div>
      <div class="modal-body">
        <p><%= object.description %></p>
      </div>
    </div>
  </div>
</div>
