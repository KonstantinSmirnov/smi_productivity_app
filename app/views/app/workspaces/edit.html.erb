<div class="row">
    <div class="col-sm-12">
        <h2>
            <%= @current_workspace.title %>
            <small>
                <%= link_to app_workspace_path(@current_workspace) do %>
                    <i class="fa fa-eye pull-right"></i>
                <% end %>
            </small>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-xs-6 col-xs-offset-3">
                    <h3>Title</h3>
                    <%= form_for [:app, @current_workspace], :html => {:class => "form-horizontal center" } do |f| %>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <%= f.label :title, class: 'control-label' %>
                            </div>
                            <div class="col-xs-9">
                                <%= f.text_field :title, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-3 col-xs-9">
                                <%= f.submit 'Update', class: 'btn btn-primary' %>
                            </div>
                        </div>
                    <% end %>
                    <hr>
                    <h3>Delete workspace</h3>
                    <p>After you will press the button 'Delete', your workspace will be deleted permanently and all the information will be lost!</p>
                    <form class="form-horizontal center">
                        <div class="form-group">
                            <div class="col-xs-offset-3 col-xs-9">
                                <a class="btn btn-danger" data-toggle="modal" data-target="#delete_workspace_modal">Delete workspace</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete workspace modal -->
<div class="modal fade" id="delete_workspace_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center">Do you want to delete this workspace?</h4>
            </div>
            <div class="modal-body">
                <div id="delete_workspace_message" class="text-center"></div>
                <div class="">
                    <%= form_for [:app, @current_workspace], remote: true, :html => {:method => :delete, :class => "form-horizontal center" } do |f| %>
                        <div class="form-group">
                            <div class="col-xs-3">
                                <%= f.label :password, class: 'control-label' %>
                            </div>
                            <div class="col-xs-9">
                                <%= f.password_field :password, class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-offset-3 col-xs-9">
                                <%= f.submit 'I want to delete this workspace permanently!', class: 'btn btn-danger' %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
