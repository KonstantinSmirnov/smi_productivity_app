$("#<%= 'update_' + @update.id.to_s %>").html("<%= j render :partial => 'update', :locals => {:object => @update} %>").hide().fadeIn(300);
<% if @alert %>
  $("#alerts").append($("<%= escape_javascript(render :partial => 'app/shared/alert', :locals => {:object => @alert}) %>").hide().fadeIn(100).delay(8000).slideUp(500));
<% end %>