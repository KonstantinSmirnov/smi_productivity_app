<!DOCTYPE html>
<html>
<head>
  <title>ProductivityApp</title>
  <%= stylesheet_link_tag    'app', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <!-- Meta, title, CSS, favicons, etc. -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="nav-md">
  <div class="container body">
    <div class="main_container">
      <div class="col-sm-3 left_col">
        <div class="left_col scroll-view">
          <div class="navbar nav_title">
            <%= link_to app_workspace_dashboard_path(@current_workspace), class: 'site_title' do %>
              <i class="fa fa-check-square-o"></i> <span>Todo App</span>
            <% end %>
          </div>
          <hr>
          <div class="clearfix"></div>

          <!-- sidebar menu -->
          <%= render 'app/shared/sidebar_menu' %>
          <!-- end sidebar menu -->
        </div>
      </div>

      <!-- top navigation -->
      <%= render 'app/shared/top_navigation' %>

      <!-- page content -->
      <div class="right_col" role="main">
        <div id="alerts">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %> alert-disappear" role="alert">
              <%= value %>
            </div>
          <% end %>
        </div>

        <%= yield %>
      </div>
      <!-- footer content -->
      <%= render 'app/shared/footer' %>
      <!-- /footer content -->
    <!-- /page content -->

    </div>
  </div>
</body>
</html>
