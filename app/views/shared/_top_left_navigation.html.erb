<% if !@current_workspace %>

<% else %>
  <li class="workspaces-list">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <%= @current_workspace.title + " " %>
      <span class="fa fa-angle-down"></span>
    </a>
    <ul class="dropdown-menu pull-right">
      <% @workspaces_list.each do |w| %>
        <li><%= link_to "#{w.title}", workspace_path(w) %></li>
      <% end %>
      <li class="controls"><a class="btn btn-default btn-sm" data-toggle="modal" data-target="#add_workspace_modal">Create new workspace</a></li>
    </ul>
  </li>
  <li>
    <%= link_to "Settings", edit_workspace_path(@current_workspace) %>
  </li>
<% end %>

<!-- Add new workspace modal -->

<div class="modal fade" id="add_workspace_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center">Create new workspace</h4>
      </div>
      <div class="modal-body">
        <div id="delete_message" class="text-center"></div>
        <div class="">
          <%= form_tag workspaces_path, method: :post do |f| %>
            <div class="form-group">
              <%= label_tag :title %>
              <%= text_field_tag :title, nil, class: 'form-control', autocomplete: :off %>
            </div>
            <div class="text-center">
              <%= submit_tag 'Create', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
